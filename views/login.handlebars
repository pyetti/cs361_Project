
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form id='login-form' action="userLogin" method='post'>
				<h2>Login</h2>
			  <input type="text" name="username" placeholder="Username" required>
			  <input type="password" name="password" placeholder="Password" required>
			  <br><br><br>
			  <button class="btn btn-default" type='submit'>Login</button>
			  <a class="btn btn-default" href="/register"><span>Register</span></a>
			</form>
		</div>
	</div>
	{{#if loginFailed }}
		<div class="row">
			<div class="col-md-12">
				<p class="error-message">{{ loginFailed }}</p>
			</div>
		</div>
	{{/if}}
</div>


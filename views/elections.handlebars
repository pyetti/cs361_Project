<div class="container">
	<div class="row">
		<div class="col-md-4">
			<form id="election-search-form" action="/getElectionInfo" method="get">
			  <div class="form-group">
			    <label for="zipcode">Find Elections in Your Area</label>
			    <input type="text" class="form-control" id="zipcode" name="zipcode" placeholder="Zip Code - e.g. 32216">
			  </div>
			  <button id="submit-election-search" type="submit" class="btn btn-default">Submit</button>
			</form>
		</div>
		<div class="col-md-8">
			<p id="electionInfo"></p>
		</div>
	</div>
</div>

<div class="invalid-zipCode container">
	<div class="row">
		<div class="col-md-12">
			<p id="invalid-zipCode-message"></p>
		</div>
	</div>
</div>

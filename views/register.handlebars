<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form id='register-form' action="registerUser" method='post'>
        <h2>Register</h2>
        <input type="text" name="username" placeholder="Username" required>
        <input type="text" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="text" name= "zipcode" placeholder="Zip Code" required>

        <select name="party">
        <option disabled selected value> Political Affilation</option>
        <option value="democrat">Democrat</option>
        <option value="republican">Republican</option>
        <option value="Green">Green Party</option>
        <option value="libertarian">Libertarian</option>
        <option value="Independent">Independent/Other</option>
        </select>

       <br><br>

       <h2>Customize Your Experience</h2>
       <input type="checkbox" name="reminder" value="1"> Get reminders for upcoming events<br>
       <input type="checkbox" name="newsletter" value="1"> Receive an election newsletter<br>
       <br>

        <br><br><br>
        <button class="btn btn-default" type='submit'>Register</button>
        <a class="btn btn-default" href="/login"><span>Have an account? Click here.</span></a>
      </form>
    </div>
  </div>
    {{#if successful }}
    <div class="row">
      <div class="col-md-12">
        <p class="error-message">{{ successful }}</p>
      </div>
    </div>
  {{/if}}


</div>